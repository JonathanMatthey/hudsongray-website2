      (function() {

        $(document).ready(function () {
          var ResponsiveImageSwitcher = new Ustwo.ResponsiveImageSwitcher('{{urls.images}}');

          var $nav = $(".nav");
          var $body = $("body");
          var navOffset;
          $(window).scroll(function(e){
